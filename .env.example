# Environment
VITE_NODE_ENV=development

# API Configuration
VITE_API_URL=http://localhost:8000/api/v1
VITE_API_TIMEOUT=30000

# Auth Configuration
VITE_JWT_SECRET=your-secret-key-here
VITE_TOKEN_KEY=ministerium_token
VITE_REFRESH_TOKEN_KEY=ministerium_refresh_token

# Feature Toggles
VITE_FEATURE_MEMBERS=true
VITE_FEATURE_FINANCE=true
VITE_FEATURE_EVENTS=true
VITE_FEATURE_SCHEDULES=true
VITE_FEATURE_CUSTOM_FIELDS=true

# Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg

# Tenant Configuration
VITE_TENANT_SUBDOMAIN=demo
VITE_APP_NAME=Ministerium

# Development
VITE_USE_MOCK_DATA=true
VITE_ENABLE_DEV_TOOLS=true
